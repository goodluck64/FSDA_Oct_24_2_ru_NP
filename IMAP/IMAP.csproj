<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Google.Apis" Version="1.71.0" />
      <PackageReference Include="Google.Apis.Auth" Version="1.71.0" />
      <PackageReference Include="Google.Apis.Gmail.v1" Version="1.70.0.3833" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="secret.json" />
      <Content Include="secret.json">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Content>
    </ItemGroup>

</Project>
